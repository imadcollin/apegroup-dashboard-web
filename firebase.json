{
    "database": {

    },
    "hosting": {
        "public": "build",
        "cleanUrls": false,
        "trailingSlash": false,
        "ignore": [
            "**/.*",
            "circle.yml",
            "firebase.json",
            "package.json",
            "README.md",
            "**/.vscode/**",
            "**/gulp/**",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=0"
                    }
                ]
            }
        ]
    }
}
